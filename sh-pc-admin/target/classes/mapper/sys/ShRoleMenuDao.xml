<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hsl.clgl.sh.pc.admin.modules.sys.dao.ShRoleMenuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hsl.clgl.sh.pc.admin.modules.sys.entity.ShRoleMenuEntity" id="shRoleMenuMap">
        <result property="id" column="id"/>
        <result property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>


    <select id="queryMenuIdList" resultType="string">
        select menu_id from sh_role_menu where role_id = #{value}
    </select>

    <delete id="deleteBatch">
        delete from sh_role_menu where role_id in
        <foreach item="roleId" collection="array" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

</mapper>